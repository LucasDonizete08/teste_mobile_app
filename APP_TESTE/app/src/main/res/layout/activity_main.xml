<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-200dp"
        tools:layout_editor_absoluteY="251dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:layout_marginTop="85sp"
            android:text="Perguntas frequentes"
            android:textSize="35dp" />

        <LinearLayout
            android:id="@+id/pergunta_1"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="teste1"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:id="@+id/img_max"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resposta_1"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/border_radius_black_white"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_answer1"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <!--  Segunda pergunta  -->
        <LinearLayout
            android:id="@+id/pergunta_2"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="teste2"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question2"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resposta_2"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:background="@drawable/border_radius_black_white"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_answer1"
                android:paddingLeft="10dp"/>
        </LinearLayout>


        <!--  Terceira pergunta  -->

        <LinearLayout
            android:id="@+id/pergunta_3"
            android:layout_width="350dp"
            android:layout_height="85dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/border_radius_black"
            android:gravity="center"
            android:onClick="teste1"
            android:paddingVertical="10sp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="256dp"
                android:layout_height="85dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/faq_question2"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_add_24"
                tools:ignore="MissingConstraints" />


        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>